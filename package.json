{
  "name": "sudoku-pro",
  "version": "1.0.0",
  "description": "Professional Sudoku Game for Steam",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.tuempresa.sudokupro",
    "productName": "Sudoku Pro",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.puzzle-games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game"
    }
  },
  "dependencies": {
    "greenworks": "^0.1.0"
  },
  "devDependencies": {
    "electron": "^39.0.0"
  }
}
